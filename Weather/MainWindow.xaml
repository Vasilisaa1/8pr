<Window x:Class="Weather.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Weather"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="0">
            <TextBox x:Name="CityTextBox" Width="200" Margin="0,0,10,0" 
                     Text="Пермь" VerticalContentAlignment="Center"/>
            <Button Content="Получить погоду" Width="120" Margin="0,0,10,0" 
                    Click="GetWeatherClick"/>
            <ComboBox x:Name="DaysComboBox" Width="150"
                      SelectionChanged="DaySelectionChanged"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" Margin="10,0,10,10">
            <StackPanel x:Name="WeatherPanel"/>
        </ScrollViewer>

        <TextBlock x:Name="StatusText" Grid.Row="1" VerticalAlignment="Center" 
                   HorizontalAlignment="Center" Foreground="Gray" FontSize="16"
                   Visibility="Collapsed"/>
    </Grid>
</Window>